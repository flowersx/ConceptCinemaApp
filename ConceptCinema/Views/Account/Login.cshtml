@using Models.ViewModels;
@model Login;

@{
    Layout = null; // Elimină layout-ul global ca să nu mai apară navbar-ul
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - ConceptCinema</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #121212;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background: #1e1e1e;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(255, 255, 255, 0.1);
            width: 100%;
            max-width: 400px;
        }

        .form-control {
            background-color: #2a2a2a;
            border: 1px solid #444;
            color: white;
        }

        .form-control:focus {
             background-color: #2a2a2a;
             border-color: #007bff;
             box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
             color: white;
        }

        .btn-login {
            background-color: #007bff;
            border: none;
            width: 100%;
            transition: 0.3s;
        }

        .btn-login:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .login-container h2 {
            text-align: center;
            margin-bottom: 1rem;
            color : white;
        }

        .link-light {
            text-decoration: none;
        }

            .link-light:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="login-container">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RemembeMe" class="form-check-input" />
                <label class="form-check-label" asp-for="RemembeMe">Remember me</label>
            </div>

            <button type="submit" class="btn btn-login">Login</button>

            <div class="text-center mt-3">
                <a asp-action="Register" class="link-light">Don't have an account? Sign up</a>
            </div>
        </form>
    </div>

</body>
</html>

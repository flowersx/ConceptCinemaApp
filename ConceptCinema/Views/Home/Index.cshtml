@using DataAccess
@model List<Movie>

@{
    ViewData["Title"] = "Filme & Promoții";
}

<h2 class="text-center mt-4">Top picks for you!</h2>

<div class="container">
    <div class="row justify-content-center">        @foreach (var movie in Model)
        {
            <div class="col-md-6 mb-4">
                <a href="@Url.Action("Details", "Movie", new { id = movie.Id })" class="movie-link">
                    <div class="card text-center p-4 transparent-card">
                        @if (!string.IsNullOrEmpty(movie.ImageBase64))
                        {
                            <img src="data:image/jpeg;base64,@movie.ImageBase64" class="card-img-top img-fluid" alt="@movie.Title" style="object-fit: cover; width: 100%; height: 400px;">
                        }
                        else
                        {
                            <img src="/photos/default-placeholder.jpg" class="card-img-top img-fluid" alt="@movie.Title" style="object-fit: cover; width: 100%; height: 400px;">
                        }
                        <div class="card-body">
                            <h4 class="card-title">@movie.Title</h4>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<style>
    h2.text-center {
        font-size: 2rem;
        font-weight: bold;
        color: white;
    }    body {
        background-color: black !important;
    }

    .transparent-card {
        background-color: rgb(0, 0, 0);
        border: 2px solid rgba(0, 0, 0, 0);
        border-radius: 7px;
        overflow: hidden;
    }

        .transparent-card img {
            transition: transform 0.3s ease-in-out;
            border-radius: 15px;
            object-fit: cover;
            width: 100%;
            height: 400px;
        }

            .transparent-card img:hover {
                transform: scale(1.05);
            }

    .card-body {
        color: white;
    }
    
    .movie-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .movie-link:hover {
        text-decoration: none;
        color: inherit;
    }
</style>

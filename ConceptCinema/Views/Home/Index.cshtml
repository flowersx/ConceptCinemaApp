@{
    ViewData["Title"] = "Filme & Promoții";
}

<h2 class="text-center mt-4">Top picks for you!</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mb-4">
            <div class="card text-center p-4 transparent-card">
                <img src="/photos/endgame.jpg" class="card-img-top img-fluid" alt="Avengers EndGame" style="object-fit: cover; width: 100%; height: 400px;">
                <div class="card-body">
                    <h4 class="card-title">Avengers Endgame</h4>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card text-center p-4 transparent-card">
                <img src="photos/deadpool.jpg" class="card-img-top" alt="Filmul 2" style="object-fit: cover; width: 100%; height: 400px;">
                <div class="card-body">
					<h4 class="card-title">DeadPool & Wolverine</h4>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card text-center p-4 transparent-card">
                <img src="photos/greenmile.jpg" class="card-img-top" alt="Filmul 3" style="object-fit: cover; width: 100%; height: 400px;">
                <div class="card-body">
                    <h4 class="card-title">The Green Mile</h4>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card text-center p-4 transparent-card">
                <img src="photos/martian.jpg" class="card-img-top" alt="Filmul 4" style="object-fit: cover; width: 100%; height: 400px;">
                <div class="card-body">
                    <h4 class="card-title">The Martian</h4>
                </div>
            </div>
        </div>
    </div>    
</div>
<style>
    h2.text-center {
        font-size: 2rem;
        font-weight: bold;
        color: white;
    }

    body {
        background-color: black !important;
    }

    .transparent-card {
        background-color: rgb(0, 0, 0);
        border: 2px solid rgba(0, 0, 0, 0);
        border-radius: 7px;
        overflow: hidden;
    }

        .transparent-card img {
            transition: transform 0.3s ease-in-out;
            border-radius: 15px;
            object-fit: cover;
            width: 100%;
            height: 400px;
        }

            .transparent-card img:hover {
                transform: scale(1.05);
            }

    .card-body {
        color: white;
</style>

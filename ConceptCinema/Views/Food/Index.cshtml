<style>
    .food-item {
        transition: transform 0.3s ease-in-out;
    }

        .food-item:hover {
            transform: scale(1.1);
        }

    .card-img-top {
        max-height: 200px;
        object-fit: cover;
        border-radius: 15px;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
        body { 
            background-color : black !important;
           
        }
        h1 {
            color : white !important;
        }

    .btn-primary {
        border-radius: 10px;
        transform: scale(1.1);
    }
</style>